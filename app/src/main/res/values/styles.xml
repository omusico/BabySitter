<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--</style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style parent="android:Theme.Dialog" name="DialogRTLTheme">
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- set animation -->
        <item name="android:windowAnimationStyle">@style/FromRightToLeft</item>
    </style>

    <style parent="@android:style/Animation.Activity" name="FromRightToLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ToolbarColorsTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
