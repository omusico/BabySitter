<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fbcContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".user.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_baseX1"
        android:layout_margin="@dimen/margin_baseX1"
        android:background="@drawable/user_profile_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_baseX1"
            android:text="@string/user_profile_personal_info"
            android:textColor="@color/blue_primary"
            android:textSize="@dimen/text_size_l"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_birthday"
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/blue_primary"
                android:gravity="center"
                android:padding="@dimen/margin_baseX1"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_baseX1"
                android:gravity="center"
                android:text="@string/hint_gender"
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/blue_primary"
                android:layout_weight="1"
                android:maxLines="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey_mdm"/>

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_salary"
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/blue_primary"
                android:gravity="center"
                android:padding="@dimen/margin_baseX1"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_account_circle"
            app:ettIconEmpty="@drawable/ic_account_circle"
            app:ettIconInEditMode="@drawable/ic_account_circle"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_first_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_group"
            app:ettIconEmpty="@drawable/ic_group"
            app:ettIconInEditMode="@drawable/ic_group"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_last_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_home_black"
            app:ettIconEmpty="@drawable/ic_home_black"
            app:ettIconInEditMode="@drawable/ic_home_black"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_city" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_phone"
            app:ettIconEmpty="@drawable/ic_phone"
            app:ettIconInEditMode="@drawable/ic_phone"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_email"
            app:ettIconEmpty="@drawable/ic_email"
            app:ettIconInEditMode="@drawable/ic_email"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_email" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_mdm"/>

        <com.gregacucnik.EditTextView
            android:id="@+id/ettAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ettIcon="@drawable/ic_info"
            app:ettIconEmpty="@drawable/ic_info"
            app:ettIconInEditMode="@drawable/ic_info"
            app:ettEmptyTexStyle="normal"
            app:ettShowHint="false"
            app:ettEmptyText="@string/hint_about" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
